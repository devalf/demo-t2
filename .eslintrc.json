{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module",
    "tsconfigRootDir": ".",
    "project": [
      "./tsconfig.json"
    ]
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jest/recommended",
    "plugin:testing-library/react",
    "plugin:@typescript-eslint/recommended",
    "google"
  ],
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "no-invalid-this": 0,
    "require-jsdoc": 0,
    "space-in-parens": [
      "error",
      "never"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "operator-linebreak": [
      "error",
      "before"
    ],
    "new-cap": [
      "error",
      {
        "properties": false,
        "capIsNewExceptions": [
          "URLParamsToAction"
        ]
      }
    ],
    "camelcase": 0,
    "eqeqeq": [
      "error",
      "always"
    ],
    "newline-before-return": "error",
    "no-console": 0,
    "@typescript-eslint/no-var-requires": 0,
    "sort-imports": "warn"
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
